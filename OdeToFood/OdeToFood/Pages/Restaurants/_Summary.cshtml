@using OdeToFood.Core
@model Restaurant

<div class="panel-heading">
    <h3>@Model.Name</h3>
</div>
<div class="panel-body">
    <span>Location: @Model.Location</span>
    <span>Location: @Model.Cusine</span>
</div>
<div class="panel-footer">
    <a class="btn btn-lg"
       asp-page="./Detail"
       asp-route-restaurantId="@Model.Id">
        <i class="fas fa-search-plus"></i>
    </a>
    <a class="btn btn-lg"
       asp-page="./Edit"
       asp-route-restaurantId="@Model.Id">
        <i class="fas fa-edit"></i>
    </a>
    <a class="btn btn-lg"
       asp-page="./Delete"
       asp-route-restaurantId="@Model.Id">
        <i class="fas fa-edit"></i>
    </a>
</div>
